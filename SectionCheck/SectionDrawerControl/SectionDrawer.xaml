<UserControl x:Class="SectionDrawerControl.SectionDrawer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SectionDrawerControl"             
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             xmlns:res="clr-namespace:ResourceLibrary;assembly=ResourceLibrary"
             Background="{DynamicResource {x:Static res:CustomResources.SadTileBrushKey}}">
   <Grid>
      <Border Grid.Column="1" Margin="3">
         <local:DrawingCanvas x:Name="drawingSurface" 
                              Background="{DynamicResource {x:Static res:CustomResources.SadTileBrushKey}}" 
                              ClipToBounds="True"></local:DrawingCanvas>
      </Border>
   </Grid>
</UserControl>
