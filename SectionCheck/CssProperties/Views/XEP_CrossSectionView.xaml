<UserControl x:Class="XEP_CssProperties.Views.XEP_CrossSectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             xmlns:r="clr-namespace:XEP_CssProperties.ResTrans"
             xmlns:res="clr-namespace:ResourceLibrary;assembly=ResourceLibrary"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:commonlib="clr-namespace:XEP_CommonLibrary.Infrastructure;assembly=XEP_CommonLibrary"
             xmlns:commonSec="clr-namespace:XEP_SectionCheckCommon.Infrastructure;assembly=XEP_SectionCheckCommon"
             xmlns:core="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:XEP_CssProperties.Infrastructure"
             xmlns:localViews="clr-namespace:XEP_CssProperties.Views"
             xmlns:lib="clr-namespace:XEP_SectionDrawer;assembly=XEP_SectionDrawer"
             xmlns:smartTB="clr-namespace:XEP_SmartTextBox;assembly=XEP_SmartTextBox"             
             d:DesignHeight="300" d:DesignWidth="300">
   <Grid>
      <Grid.Resources>
         <commonSec:XEP_QCNameWithUnitGeneral x:Key="converterNameWithUnit"/>
         <commonSec:XEP_QCManagedValueGeneral x:Key="converterManagedValue"/>
         <commonSec:XEP_QCNameOnMarkGeneral x:Key="converterMark"/>
      </Grid.Resources>
      <telerik:RadExpander IsExpanded="True" VerticalContentAlignment="Top">
         <telerik:RadExpander.Header>
            <TextBlock Text="{x:Static r:Resources.CROSS_SECTION}"/>
         </telerik:RadExpander.Header>
         <telerik:RadExpander.Content>
            <ScrollViewer CanContentScroll="True" HorizontalScrollBarVisibility="Disabled">
               <Grid>
                  <Grid.ColumnDefinitions>
                     <ColumnDefinition Width="*" />
                     <ColumnDefinition Width="3*" />
                  </Grid.ColumnDefinitions>
                  <Grid.RowDefinitions>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="Auto"/>
                  </Grid.RowDefinitions>
                  <Viewbox Grid.Row="0" Grid.Column="0" Grid.RowSpan="4">
                     <lib:XEP_SectionDrawerUC x:Name="drawingScene" Width="200" Height="200" SnapsToDevicePixels="True" Margin="2" Padding="3"
                                              CssShape4Draw="{Binding Path=CssShape}"
                                              CssAxisHorizontal4Draw="{Binding Path=CssAxisHorizontal, Mode=TwoWay}"
                                              CssAxisVertical4Draw="{Binding Path=CssAxisVertical, Mode=TwoWay}"/>
                  </Viewbox>
                  <telerik:RadExpander Grid.Row="0" Grid.Column="1" IsExpanded="False" VerticalContentAlignment="Top" DataContext="{Binding ActiveSectionData.ConcreteSectionData.MaterialData}">
                     <telerik:RadExpander.Header>
                        <TextBlock Text="{x:Static r:Resources.PARAMETERS}"/>
                     </telerik:RadExpander.Header>
                     <telerik:RadExpander.Content>
                        <smartTB:XEP_SmartTextBox SmartText="{Binding EpsC1, Converter={StaticResource converterMark}, Mode=OneWay}"/>
                     </telerik:RadExpander.Content>
                  </telerik:RadExpander>
                  <telerik:RadExpander DataContext="{Binding ActiveSectionData.ConcreteSectionData.MaterialData}" 
                                       Grid.Row="1" Grid.Column="1" IsExpanded="False" VerticalContentAlignment="Top">
                     <telerik:RadExpander.Header>
                        <TextBlock Text="{x:Static r:Resources.GEOMETRY}"/>
                     </telerik:RadExpander.Header>
                     <telerik:RadExpander.Content>
                        <telerik:RadGridView ItemsSource="{Binding Data, Mode=TwoWay}" GridLinesVisibility="Horizontal"
                                             AutoGenerateColumns="True"
                                             ShowColumnHeaders="True" ShowGroupPanel="False" RowIndicatorVisibility="Collapsed"></telerik:RadGridView>
                     </telerik:RadExpander.Content>
                  </telerik:RadExpander>
                  <telerik:RadExpander DataContext="{Binding ActiveSectionData.ConcreteSectionData.MaterialData}" 
                                       Grid.Row="2" Grid.Column="1" IsExpanded="False" VerticalContentAlignment="Top">
                     <telerik:RadExpander.Header>
                        <TextBlock Text="{x:Static r:Resources.PROPERTIES}"/>
                     </telerik:RadExpander.Header>
                     <telerik:RadExpander.Content>
                        <Grid>
                           <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="*" />
                              <ColumnDefinition Width="*" />
                           </Grid.ColumnDefinitions>
                           <Grid.RowDefinitions>
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                              <RowDefinition Height="*" />
                           </Grid.RowDefinitions>
                           <TextBox Grid.Column="0" Grid.Row="0" Text="{x:Static r:Resources.TYPE}" Style="{DynamicResource {x:Static res:CustomResources.TextBoxAsLabelStyle_SCkey}}"/>

                           <TextBox Grid.Column="0" Grid.Row="1" DataContext="{Binding Fck}" Text="{Binding Converter={StaticResource converterNameWithUnit}, Mode=OneWay}" Style="{DynamicResource {x:Static res:CustomResources.TextBoxAsLabelStyle_SCkey}}"/>
                           <TextBox Grid.Column="0" Grid.Row="2" DataContext="{Binding FckCube}" Text="{Binding Converter={StaticResource converterNameWithUnit}, Mode=OneWay}" Style="{DynamicResource {x:Static res:CustomResources.TextBoxAsLabelStyle_SCkey}}"/>
                           <TextBox Grid.Column="0" Grid.Row="3" DataContext="{Binding EpsC1}" Text="{Binding Converter={StaticResource converterNameWithUnit}, Mode=OneWay}" Style="{DynamicResource {x:Static res:CustomResources.TextBoxAsLabelStyle_SCkey}}"/>
                           <TextBox Grid.Column="0" Grid.Row="4" DataContext="{Binding EpsCu1}" Text="{Binding Converter={StaticResource converterNameWithUnit}, Mode=OneWay}" Style="{DynamicResource {x:Static res:CustomResources.TextBoxAsLabelStyle_SCkey}}"/>
                           <TextBox Grid.Column="0" Grid.Row="5" DataContext="{Binding EpsC2}" Text="{Binding Converter={StaticResource converterNameWithUnit}, Mode=OneWay}" Style="{DynamicResource {x:Static res:CustomResources.TextBoxAsLabelStyle_SCkey}}"/>
                           <TextBox Grid.Column="0" Grid.Row="6" DataContext="{Binding EpsCu2}" Text="{Binding Converter={StaticResource converterNameWithUnit}, Mode=OneWay}" Style="{DynamicResource {x:Static res:CustomResources.TextBoxAsLabelStyle_SCkey}}"/>
                           <TextBox Grid.Column="0" Grid.Row="7" DataContext="{Binding EpsC3}" Text="{Binding Converter={StaticResource converterNameWithUnit}, Mode=OneWay}" Style="{DynamicResource {x:Static res:CustomResources.TextBoxAsLabelStyle_SCkey}}"/>
                           <TextBox Grid.Column="0" Grid.Row="8" DataContext="{Binding EpsCu3}" Text="{Binding Converter={StaticResource converterNameWithUnit}, Mode=OneWay}" Style="{DynamicResource {x:Static res:CustomResources.TextBoxAsLabelStyle_SCkey}}"/>
                           <TextBox Grid.Column="0" Grid.Row="9" DataContext="{Binding N}" Text="{Binding Converter={StaticResource converterNameWithUnit}, Mode=OneWay}" Style="{DynamicResource {x:Static res:CustomResources.TextBoxAsLabelStyle_SCkey}}"/>
                           <telerik:RadNumericUpDown Grid.Column="1" Grid.Row="1" Value="{Binding Fck, Converter={StaticResource converterManagedValue}, Mode=TwoWay}" />
                           <telerik:RadNumericUpDown Grid.Column="1" Grid.Row="2" Value="{Binding FckCube, Converter={StaticResource converterManagedValue}, Mode=TwoWay}" />
                           <telerik:RadNumericUpDown Grid.Column="1" Grid.Row="3" Value="{Binding EpsC1, Converter={StaticResource converterManagedValue}, Mode=TwoWay}" />
                           <telerik:RadNumericUpDown Grid.Column="1" Grid.Row="4" Value="{Binding EpsCu1, Converter={StaticResource converterManagedValue}, Mode=TwoWay}" />
                           <telerik:RadNumericUpDown Grid.Column="1" Grid.Row="5" Value="{Binding EpsC2, Converter={StaticResource converterManagedValue}, Mode=TwoWay}" />
                           <telerik:RadNumericUpDown Grid.Column="1" Grid.Row="6" Value="{Binding EpsCu2, Converter={StaticResource converterManagedValue}, Mode=TwoWay}" />
                           <telerik:RadNumericUpDown Grid.Column="1" Grid.Row="7" Value="{Binding EpsC3, Converter={StaticResource converterManagedValue}, Mode=TwoWay}" />
                           <telerik:RadNumericUpDown Grid.Column="1" Grid.Row="8" Value="{Binding EpsCu3, Converter={StaticResource converterManagedValue}, Mode=TwoWay}" />
                           <telerik:RadNumericUpDown Grid.Column="1" Grid.Row="9" Value="{Binding N, Converter={StaticResource converterManagedValue}, Mode=TwoWay}" />
                           <!--<TextBox Grid.Column="1" Grid.Row="1" Text="{Binding Path=Fck, Converter={StaticResource converterManagedValue}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Style="{DynamicResource {x:Static res:CustomResources.TextBox4EditAsLabelStyle_SCkey}}"/>
                           <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding Path=FckCube, Converter={StaticResource converterManagedValue}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Style="{DynamicResource {x:Static res:CustomResources.TextBox4EditAsLabelStyle_SCkey}}"/>
                           <TextBox Grid.Column="1" Grid.Row="3" Text="{Binding Path=EpsC1, Converter={StaticResource converterManagedValue}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Style="{DynamicResource {x:Static res:CustomResources.TextBox4EditAsLabelStyle_SCkey}}"/>
                           <TextBox Grid.Column="1" Grid.Row="4" Text="{Binding Path=EpsCu1, Converter={StaticResource converterManagedValue}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Style="{DynamicResource {x:Static res:CustomResources.TextBox4EditAsLabelStyle_SCkey}}"/>
                           <TextBox Grid.Column="1" Grid.Row="5" Text="{Binding Path=EpsC2, Converter={StaticResource converterManagedValue}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Style="{DynamicResource {x:Static res:CustomResources.TextBox4EditAsLabelStyle_SCkey}}"/>
                           <TextBox Grid.Column="1" Grid.Row="6" Text="{Binding Path=EpsCu2, Converter={StaticResource converterManagedValue}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Style="{DynamicResource {x:Static res:CustomResources.TextBox4EditAsLabelStyle_SCkey}}"/>
                           <TextBox Grid.Column="1" Grid.Row="7" Text="{Binding Path=EpsC3, Converter={StaticResource converterManagedValue}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Style="{DynamicResource {x:Static res:CustomResources.TextBox4EditAsLabelStyle_SCkey}}"/>
                           <TextBox Grid.Column="1" Grid.Row="8" Text="{Binding Path=EpsCu3, Converter={StaticResource converterManagedValue}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Style="{DynamicResource {x:Static res:CustomResources.TextBox4EditAsLabelStyle_SCkey}}"/>
                           <TextBox Grid.Column="1" Grid.Row="9" Text="{Binding Path=N, Converter={StaticResource converterManagedValue}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Style="{DynamicResource {x:Static res:CustomResources.TextBox4EditAsLabelStyle_SCkey}}"/>-->
                        </Grid>
                     </telerik:RadExpander.Content>
                  </telerik:RadExpander>
                  <!--<RichTextBox Grid.Row="3" Grid.Column="1">
                     <FlowDocument>
                        <Paragraph >
                           H<Run BaselineAlignment="Subscript" FontSize="9">2</Run>O
                        </Paragraph>
                     </FlowDocument>
                  </RichTextBox>-->
                  <telerik:RadRichTextBox Grid.Row="3" Grid.Column="1">
                     <telerik:RadDocument>
                        <telerik:Section>
                           <telerik:Paragraph>
                              <telerik:Span Text="Span declared in XAML" />
                           </telerik:Paragraph>
                        </telerik:Section>
                     </telerik:RadDocument>
                  </telerik:RadRichTextBox>
               </Grid>
            </ScrollViewer>
         </telerik:RadExpander.Content>
      </telerik:RadExpander>
   </Grid>
</UserControl>
